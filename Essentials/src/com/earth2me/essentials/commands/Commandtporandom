package com.earth2me.essentials.commands;

import com.earth2me.essentials.CommandSource;
import com.earth2me.essentials.User;
import org.bukkit.Location;
import org.bukkit.Server;
import org.bukkit.event.player.PlayerTeleportEvent;

import java.util.ArrayList;
import java.util.Random;

import static com.earth2me.essentials.I18n.tl;

public class Commandtporandom extends EssentialsCommand {

    public Commandtporandom() {
        super("tporandom");
    }

    @Override
    public void run(final Server server, final CommandSource sender, final String commandLabel, final String[] args) throws Exception {
        if (args.length < 1) {
            if (sender.isPlayer()) {
                teleportRandomPlayer(server, sender, ess.getUser(sender.getPlayer()), commandLabel);
                return;
            }
            throw new NotEnoughArgumentsException();
        }
        final User target = getPlayer(server, sender, args, 0);
        teleportRandomPlayer(server, sender, target, commandLabel);
    }

    private void teleportRandomPlayer(Server server, CommandSource sender, User target, String label) {
        User player = ess.getUser(sender.getPlayer());
        int totalPlayers = ess.getOnlinePlayers().size() - ess.getVanishedPlayers().size();
        if(totalPlayers <= 1) {
            sender.sendMessage(tl("notEnoughPlayers"));
            return;
        }

        if(player.isVanished()) {
            ArrayList<User> tpoRandomPlayers = new ArrayList<User>();
            for (User all : ess.getOnlineUsers()) {
                if (!all.isVanished() && all != player) {
                    tpoRandomPlayers.add(all);
                }
            }
            User randomPlayer = (User) tpoRandomPlayers.get((new Random()).nextInt(tpoRandomPlayers.size()));
            try {
                player.getAsyncTeleport().now(randomPlayer.getLocation(), false, PlayerTeleportEvent.TeleportCause.COMMAND, getNewExceptionFuture(sender, label));
            } catch (Exception error) {
                error.printStackTrace();
            }
            player.sendMessage(tl("randomlyTeleport", randomPlayer.getDisplayName()));
            tpoRandomPlayers.clear();
            return;
        } else {
            player.sendMessage(tl("mustBeVanished"));
            return;
        }
    }
}
